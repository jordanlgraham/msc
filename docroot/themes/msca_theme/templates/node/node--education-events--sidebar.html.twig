{#
/**
 * @file
 * Theme override to display an Education and Events node newsletter display.
 *
 */
#}
<article{{ attributes }}>

  <div{{ content_attributes }}>
      <div class="date-square float-left mr-3">
          <div class="date-square-month">{{ node.field_date.value|date('M') }}</div>
          <div class="date-square-day">{{ node.field_date.value|date('j') }}</div>
      </div>
      <div class="event-teaser-text">
          {% if content.field_date|render %}
            <h4>{{ content.field_date }}</h4>
          {% endif %}
          <h2{{ title_attributes }}>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
          </h2>
      </div>

  </div>

</article>
