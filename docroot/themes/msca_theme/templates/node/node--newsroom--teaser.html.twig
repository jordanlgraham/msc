{#
/**
 * @file
 * Theme override to display a Newsroom node teaser display.
 *
 */
#}
<article{{ attributes.addClass('pb-5') }}>

  <div{{ content_attributes }}>
      <div class="icon-square float-left">
          {# directory is a global variable of the current theme path. #}
          {% set svg_image = directory ~ '/svg/news.svg' %}
          {# It's important to render it as an svg so sass fill property can control color. #}
          {{ source(svg_image) }}
      </div>
      <div class="newsroom-teaser-text teaser-text">
          {% if content.field_newsroom_category|render %}
              <h4>{{ content.field_newsroom_category.0 }}</h4>
          {% endif %}
          <h2{{ title_attributes }}>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
          </h2>
          {% if content.field_news_source|render %}
              <h6>{{ content.field_news_source.text }}</h6>
          {% endif %}
          {{ content.body }}
          <a href="{{ path('entity.node.canonical', {'node': node.id }) }}">Read more</a>
      </div>

  </div>

</article>
