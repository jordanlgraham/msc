{#
/**
 * @file
 * Theme override to display a Vendor node full display.
 *
 */
#}
<article{{ attributes.addClass('container') }}>

        {{ title_prefix }}
        {% if not page %}
            <h2{{ title_attributes }}>
                <a href="{{ url }}" rel="bookmark">{{ label }}</a>
            </h2>
        {% endif %}
        {{ title_suffix }}

        {% if display_submitted %}
            <footer>
                {{ author_picture }}
                <div{{ author_attributes }}>
                    {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
                    {{ metadata }}
                </div>
            </footer>
        {% endif %}
        <div class="row">
            <div{{ content_attributes }} class="col-md-8">
              <div class="vendor-content-interior">
                {% if content.field_vendor_image|render  %}
                  <div class="vendor-logo">
                      {{ content.field_vendor_image }}
                  </div>
                {% endif %}
                <div class="vendor-info">

                  {{content.field_address }}

                  {{ content.field_web_address }}

                  {{ content.field_contact }}

                  {{ content.field_contact_title }}

                  {{ content.field_phone }}

                  {{ content.field_email }}

                  {{ content.field_primary_services }}

                  {{ content.field_additional_services }}

                  {{ content.field_facebook }}

                  {{ content.field_twitter }}

                  {{ content.field_linkedin }}

                </div>
              </div>
            </div>
            <div class="col-md-4">
                {{ drupal_region('sidebar') }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {% if content.field_related_content|render %}
                    {{ content.field_related_content }}
                {% endif %}
            </div>
        </div>

</article>
