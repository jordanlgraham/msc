<body text="#000000" link="#0000FF" vlink="#0000FF" alink="#0000FF">
<table width="700" cellpadding="0" cellspacing="0" border="0" align="center">
    <tr height="0"><td height="0" bgcolor="#37567B">
            <table width="700" border="0" cellspacing="0" cellpadding="0">
                <tr><td width="406"><img src="http://{{ base_path }}/sites/default/files/inline-images/header.gif" width="406" height="117" alt="Mass Senior Care Association" border="0" style="padding: 0px; margin: 0px; display: block;" /></td>
                    <td width="294" valign="middle" align="center"><!--custom-adspace --></td></tr>
            </table>
        </td></tr>
    <tr><td bgcolor="#37567B"><img src="http://{{ base_path }}/sites/default/files/inline-images/sub_header.jpg" width="700" height="35" border="0" style="padding: 0px; margin: 0px; display: block;" /></td></tr>
    <tr><td height="0">
            <table cellpadding="0" cellspacing="0">
                <tr><td width="261" valign="top" bgcolor="#BFCDD7" >
                        <table cellpadding="0" cellspacing="0" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; font-weight:bold; color:#FFFFFF">
                            <tr><td colspan="2" height="25" bgcolor="#000000" style="padding-left:5px;font-family:Arial, Helvetica, sans-serif; font-size:12px; font-weight:bold; color:#FFFFFF">
                                    {% if content.field_newsletter_date|render %}
                                        {{ content.field_newsletter_date }}
                                    {% endif %}
                                </td>
                            </tr>
                            <tr><td width="261" height="36" bgcolor="#37567B" background="images/sidebar_header.jpg" style="padding-left:5px">
                                    <a href="http://www.maseniorcare.org" target="_blank" style="color:#FFFFFF; text-decoration:none">Visit our website</a>
                                </td></tr>
                            <tr><td height="23" bgcolor="#37567B" style="padding-left:5px">In This Issue</td></tr>
                            <tr><td align="center" valign="top" style="padding:10px 0px">
                                    <table class="sidebar" width="90%" cellpadding="3" cellspacing="0"  style="color:#333333; font-family:Arial, Helvetica, sans-serif; font-weight:bold; font-size:12px">
                                        {% for item in node.field_newsletter_article %}
                                            <!--tocstart -->
                                            <tr>
                                                <td width="9" valign="top">
                                                    <img src="http://newsmanager.commpartners.com/mecf/images/bullet.jpg" width="9" height="9"></td>
                                                <td align="left"><p class="menu-item"><a href="#{{ item.entity.nid.value }}" style="text-decoration:none">{{ item.entity.label }}</a></p></td>
                                            </tr>
                                            <!--tocend -->
                                        {% endfor %}
                                    </table>
                                </td></tr>
                            <tr><td height="23" bgcolor="#37567B" style="padding-left:5px">Features</td></tr>
                            <tr><td align="center" style="padding:10px 0px">
                                    <table class="sidebar" width="90%" cellpadding="3" cellspacing="0"  style="color:#333333; font-family:Arial, Helvetica, sans-serif; font-weight:bold; font-size:12px">
                                        <tr><td width="29"><a href="mailto:gabrahams@massseniorcare.org" target="_blank"><img src="http://{{ base_path }}/sites/default/files/inline-images/contact_us.jpg" alt="Contact Us" width="29" height="29" border="0"></a></td>
                                            <td width="202" align="left"><a href="mailto:gabrahams@maseniorcare.org" target="_blank" style="text-decoration:none">Contact Us</a></td></tr>
                                        <tr><td width="29"><a href="http://www.maseniorcare.org/Job_Seekers/Job_Seekers.aspx" target="_blank"><img src="http://{{ base_path }}/sites/default/files/inline-images/job_center.jpg" alt="Job Center" width="29" height="29" border="0"></a></td>
                                            <td align="left"><a href="http://www.maseniorcare.org/Job_Seekers/Job_Seekers.aspx" target="_blank" style="text-decoration:none">Job Center</a></td></tr>
                                        <tr><td width="29"><a href="http://{{ base_path }}/newsletter/issues/" target="_blank"><img src="http://{{ base_path }}/sites/default/files/inline-images/view_back.jpg" alt="View Back Issues" width="29" height="29" border="0"></a></td>
                                            <td align="left"><a href="http://{{ base_path }}/newsletter/issues/" target="_blank" style="text-decoration:none">View Back Issues</a></td></tr>
                                        <tr><td width="29"><a href="http://{{ base_path }}/forward/node/{{ node.id }}" target="_blank"><img src="http://{{ base_path }}/sites/default/files/inline-images/email_news.jpg" alt="Email Newsletter" width="29" height="29" border="0"></a></td>
                                            <td align="left"><a href="http://{{ base_path }}/forward/node/{{ node.id }}" target="_blank" style="text-decoration:none">E-mail Entire Newsletter</a></td></tr>
                                        <tr><td width="29"><a href="http://{{ base_path }}/print/pdf/node/{{ node.id }}" target="_blank"><img src="http://{{ base_path }}/sites/default/files/inline-images/print_entire.jpg" alt="Print Newsletter" width="29" height="29" border="0"></a></td>
                                            <td align="left"><a href="http://{{ base_path }}/print/pdf/node/{{ node.id }}" style="text-decoration:none">Print Entire Newsletter</a></td></tr>
                                        <tr><td width="29"><a href="http://www.magnetmail.net/actions/subscription_manage.cfm?user_id=MA_ExCare" target="_blank"><img src="http://{{ base_path }}/sites/default/files/inline-images/manage_sub.jpg" alt="Manage Subscription" width="29" height="29" border="0"></a></td>
                                            <td align="left"><a href="http://www.magnetmail.net/actions/subscription_manage.cfm?user_id=MA_ExCare" target="_blank" style="text-decoration:none">Manage Your Subscription</a></td></tr>
                                        <tr><td colspan="2"><a href="#calendar"><img src="http://{{ base_path }}/sites/default/files/inline-images/calendar.jpg" width="173" height="63" border="0"></a></td></tr>
                                    </table>
                                </td></tr>
                        </table>
                    </td>
                    <td align="left" width="439" valign="top" style="padding:0px; border-right:1px solid #BFCDD7">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <!--custom-top ad space-start -->
                            {% for item in node.field_sponsor %}
                                <tr><td colspan="2" bgcolor="#000000" height="25">
                                        <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                            <tr><td align="left" valign="top" bgcolor="#000000" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: #FFFFFF; padding: 4px 10px; font-weight: bold;">This Week's E-News is Sponsored By:</td></tr>
                                        </table>
                                    </td></tr>
                                <tr><td colspan="2" align="left" valign="top" bgcolor="#FFFFFF">
                                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                            {% set logopath = item.entity.field_logo.entity.fileuri %}
                                            {% set logostyle = logopath|image_style('logo') %}
                                            <tr>
                                                <td align="left" valign="top" bgcolor="#FFFFFF" style="font-family: Arial, Helvetica, sans-serif; padding: 10px; font-size: 12px; line-height: 16px;">
                                                    {% if logopath is defined and logopath is not empty %}
                                                        <img src="http://{{ base_path }}{{ file_url(logostyle) }}" class="logo" width="200px">
                                                    {% endif %}
                                                    {{ item.entity.body.value|raw }}
                                                    {% set website = item.entity.field_web_address.uri %}
                                                    {% set webtitle = item.entity.field_web_address.title %}
                                                    {% if website is defined and website is not empty %}
                                                        <strong>Website: </strong> <a href="{{ website }}" target="_blank">{{ webtitle }}</a><br />
                                                    {% endif %}
                                                    {% set facebook = item.entity.field_facebook.uri %}
                                                    {% set facebooktitle = item.entity.field_facebook.title %}
                                                    {% if facebook is defined and facebook is not empty %}
                                                        <strong>Facebook: </strong> <a href="{{ facebook }}" target="_blank">{{ facebooktitle }}</a><br />
                                                    {% endif %}
                                                    {% set twitter = item.entity.field_twitter.uri %}
                                                    {% set twittertitle = item.entity.field_twitter.title %}
                                                    {% if twitter is defined and twitter is not empty %}
                                                        <strong>Twitter: </strong> <a href="{{ twitter }}" target="_blank">{{ twittertitle }}</a><br />
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        </table>
                                    </td></tr>
                            {% endfor %}
                            <!--custom-top ad space-end -->
                        </table>
                        <br />

                        <!--featured-article-start -->
                        {% for item.field_featured_article %}
                            <table cellpadding="0" cellspacing="0" style="font-family:Arial, Helvetica, sans-serif; font-size:12px">
                                <tr><td colspan="2" height="25" bgcolor="#000000">FEATURED ARTICLE</td></tr>
                                <tr>
                                    <td valign="bottom" align="left" style="color:#6D89AA; font-weight:bold; font-size:14px; padding: 0 0 0 25px;"><a href="http://{{ base_path }}{{ path('entity.node.canonical', {'node': item.entity.nid.value }) }}" class="article-title" target="_blank">{{ item.entity.label }}</a></td>
                                </tr>
                                <tr>
                                    <td style="line-height:16px; font-size:12px; font-family:Arial, Helvetica, sans-serif; padding: 5px 25px;">
                                        {% set text = item.entity.body.value|render|striptags|convert_encoding('UTF-8', 'HTML-ENTITIES') %}
                                        {% set imagepath = item.entity.field_newsletter_image.entity.fileuri %}
                                        {% set imagestyle = imagepath|image_style('logo') %}
                                        {% if imagepath is defined and imagepath is not empty %}
                                            <img src="http://{{ base_path }}{{ file_url(imagestyle) }}" class="newsletter-image" width="200px">
                                        {% endif %}
                                        <span class=""article-body">
                                        {{ text|length > 500 ? text|slice(0, 500)|raw ~ '...' : text|raw }}
                                        </span>
                                        <span class="read-more">
                                            <a href="http://{{ base_path }}{{ path('entity.node.canonical', {'node': item.entity.nid.value }) }}" target="_blank">Read more</a>
                                        </span>
                                    </td>
                                </tr>
                                <tr><td valign="top" style="font-size:10px; padding: 5px 25px 0px 25px;">
                                        <img src="http://{{ base_path }}/sites/default/files/inline-images/email_article.gif" width="18" height="16">
                                        <a href="http://{{ base_path }}/forward/node/{{ item.entity.nid.value }}" style="margin:5px; position:relative; top:-4px; color: #37567b;" target="_blank">E-mail This Article</a>
                                        <img src="http://{{ base_path }}/sites/default/files/inline-images/print_article.gif" width="18" height="16">
                                        <a href="http://{{ base_path }}/print/pdf/node/{{ item.entity.nid.value }}" style="margin:5px; position:relative; top:-4px; color: #37567b;" target="_blank">Print This Article</a></td></tr>
                            </table><br>
                        {% endfor %}
                        <!--featured-article-end -->

                        {% for item in node.field_newsletter_article %}
                            <!--articlestart -->
                            <a name="{{ item.entity.nid.value }}"></a>
                            <table cellpadding="0" cellspacing="0" style="font-family:Arial, Helvetica, sans-serif; font-size:12px">
                                <tr><td colspan="2" height="25" bgcolor="#000000">LATEST NEWS & RESOURCES</td></tr>
                                <tr>
                                    <td valign="bottom" align="left" style="color:#6D89AA; font-weight:bold; font-size:14px; padding: 0 0 0 25px;"><a href="http://{{ base_path }}{{ path('entity.node.canonical', {'node': item.entity.nid.value }) }}" class="article-title" target="_blank">{{ item.entity.label }}</a></td>
                                </tr>
                                <tr>
                                    <td style="line-height:16px; font-size:12px; font-family:Arial, Helvetica, sans-serif; padding: 5px 25px;">
                                        {% set text = item.entity.body.value|render|striptags|convert_encoding('UTF-8', 'HTML-ENTITIES') %}
                                        {% set imagepath = item.entity.field_newsletter_image.entity.fileuri %}
                                        {% set imagestyle = imagepath|image_style('logo') %}
                                        {% if imagepath is defined and imagepath is not empty %}
                                            <img src="http://{{ base_path }}{{ file_url(imagestyle) }}" class="newsletter-image" width="200px">
                                        {% endif %}
                                        <span class=""article-body">
                                        {{ text|length > 500 ? text|slice(0, 500)|raw ~ '...' : text|raw }}
                                        </span>
                                        <span class="read-more">
                                            <a href="http://{{ base_path }}{{ path('entity.node.canonical', {'node': item.entity.nid.value }) }}" target="_blank">Read more</a>
                                        </span>
                                    </td>
                                </tr>
                                <tr><td valign="top" style="font-size:10px; padding: 5px 25px 0px 25px;">
                                        <img src="http://{{ base_path }}/sites/default/files/inline-images/email_article.gif" width="18" height="16">
                                        <a href="http://{{ base_path }}/forward/node/{{ item.entity.nid.value }}" style="margin:5px; position:relative; top:-4px; color: #37567b;" target="_blank">E-mail This Article</a>
                                        <img src="http://{{ base_path }}/sites/default/files/inline-images/print_article.gif" width="18" height="16">
                                        <a href="http://{{ base_path }}/print/pdf/node/{{ item.entity.nid.value }}" style="margin:5px; position:relative; top:-4px; color: #37567b;" target="_blank">Print This Article</a></td></tr>
                            </table><br>
                            <!--articleend -->
                        {% endfor %}
                        <!--custom-calendar-start -->
                        <a name="calendar"></a>
                        <table cellpadding="0" cellspacing="0" width="95%" align="center" style="margin: 0px 10px;">
                            <tr><td colspan="2" valign="bottom" style="color: #37567B; font-size:18px; font-weight:bold; font-family:Arial, Helvetica, sans-serif; padding: 05px 25px;">Mass Senior Care Calendar</td></tr>
                            <tr><td style="padding: 0px 25px;">
                            <tr valign="top" bgcolor="#000066" style="border: 1px solid #37567B;">
                                <td valign="top" colspan="3">
                                    <h2 style="color: #FFF;">&nbsp;{{ 'now'|date('Y') }}</h2>
                                </td>
                            </tr>
                            {% for item in node.field_calendar %}
                                <tr valign="top" style="border: 1px solid #37567B;">
                                    <td valign="top" width="20%" style="padding: 5px;">
                                        <p>&nbsp;{{ item.entity.field_date.value|date('n/j') }}</p>
                                    </td>
                                    <td valign="top" style="padding: 5px;">
                                        <p><strong>{{ item.entity.label }}</strong>
                                            <span style="font-weight: normal">
                                            {% set text = item.entity.body.value|render|striptags %}
                                                {{ text|length > 90 ? text|slice(0, 90)|raw ~ '...' : text|raw }}
                                                <a href="http://{{ base_path }}{{ path('entity.node.canonical', {'node': item.entity.nid.value }) }}" target="_blank">Read more</a>
                                            </span>
                                        </p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </td></tr>
                        </table>
                        <br>
                        <!--custom-calendar-end -->
                        <br>

                        <br />
                    </td></tr>
            </table>
        </td></tr>
    <tr><td bgcolor="#37567B"><img src="http://{{ base_path }}/sites/default/files/inline-images/footer.jpg" height="42" width="700" border="0" style="padding: 0px; margin: 0px; display: block;" /></td></tr>
    <tr><td colspan="2" bgcolor="#000000" style="color:#FFFFFF; font-size:11px; padding:8px 15px; font-family:Arial, Helvetica, sans-serif; text-align:center"><a href="http://www.maseniorcare.org" style="color:#FFFFFF;" target="_blank">Massachusetts Senior Care Association</a> . 800 South Street - Suite 280, Waltham, MA 02453<br><a href="mailto:info@maseniorcare.org" style="color:#FFFFFF;">info@maseniorcare.org</a>. phone: 617.558.0202 . fax: 617.558.3546</td></tr>
</table>
</body>
