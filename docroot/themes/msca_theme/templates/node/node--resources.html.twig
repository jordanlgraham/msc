{#
/**
 * @file
 * Theme override to display a Resource node full display.
 *
 */
#}
<article{{ attributes.addClass('container') }}>

        {{ title_prefix }}
        {% if not page %}
            <h2{{ title_attributes }}>
                <a href="{{ url }}" rel="bookmark">{{ label }}</a>
            </h2>
        {% endif %}
        {{ title_suffix }}

        {% if display_submitted %}
            <footer>
                {{ author_picture }}
                <div{{ author_attributes }}>
                    {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
                    {{ metadata }}
                </div>
            </footer>
        {% endif %}
        <div class="row">
            <div{{ content_attributes }} class="col-md-8">
                {% if content.field_resource_category|render or content.field_video_date|render %}
                    <div class="resource-category-and-date">
                        {% if content.field_resource_category|render %}
                            {{ content.field_resource_category }} |
                        {% endif %}
                        {{ date }}
                    </div>
                {% endif %}

                {% if content.field_tags|render %}
                    <div class="resource-related-tags">
                        {{ content.field_tags }}
                    </div>
                {% endif %}

                {% if content.body|render %}
                    {{ content.body}}
                {% endif %}
                {% if content.field_file|render %}
                    <div class="resource-file">
                    {{ content.field_file }}
                    </div>
                {% endif %}
            </div>
            <div class="col-md-4">
                {{ drupal_region('sidebar') }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {% if content.field_related_content|render %}
                    {{ content.field_related_content }}
                {% endif %}
            </div>
        </div>

</article>
