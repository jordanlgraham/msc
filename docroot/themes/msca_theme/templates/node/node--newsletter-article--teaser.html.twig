{#
/**
 * @file
 * Theme override to display a Newsletter Article node teaser display.
 *
 */
#}
{# For Newsletter TOC anchor links. #}
<a name="{{ node.id }}"></a>
<article{{ attributes }}>

  <div{{ content_attributes }}>
      <div class="icon-square float-left">
          {# It's important to render it as an svg so sass fill property can control color. #}
          {{ source(directory ~ '/svg/mail.svg') }}
      </div>
      <div class="newsletter-article-teaser-text teaser-text">
          <h2{{ title_attributes }}>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
          </h2>
          {{ content.body }}
          <a class="read-more" href="{{ path('entity.node.canonical', {'node': node.id }) }}">{{ 'Read more'|t }}</a>
      </div>

  </div>

</article>
