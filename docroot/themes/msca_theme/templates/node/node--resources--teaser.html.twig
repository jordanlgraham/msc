{#
/**
 * @file
 * Theme override to display a Resources node teaser display.
 *
 */
#}
<article{{ attributes.addClass('pb-5') }}>

  <div{{ content_attributes }}>
      <div class="icon-square float-left">
          {# It's important to render it as an svg so sass fill property can control color. #}
          {{ source(directory ~ '/svg/file.svg') }}
      </div>
      <div class="resources-teaser-text teaser-text">
          {# Render the content type this is #}
          <h4>{{ node.type.entity.label }}</h4>
          <h2{{ title_attributes }}>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
          </h2>
          {% if content.field_resource_type|render %}
              {# Display just the first one in case there are multiple types. #}
              <h6>{{ content.field_resource_type.0 }}</h6>
          {% endif %}
          {{ content.body }}
          <a href="{{ path('entity.node.canonical', {'node': node.id }) }}">{{ 'Read more'|t }}</a>
      </div>

  </div>

</article>
