{#
/**
 * @file
 * Template for the site header.
 */
#}
<header class="container-fluid" id="site-header">
  <div class="header-menu col-sm-12 col-md-12 col-lg-12">
     <nav class="navbar navbar-toggleable-md navbar-light bg-light" role="navigation">
       <div class="navbar-header">
         <a class="navbar-brand" href="/">
           <img src="/themes/msca_theme/images/msca-logo-wide.png">
         </a>
         <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
           <span class="hamburger"></span>
         </button>
       </div>

       <div class="collapse navbar-collapse" id="navbarSupportedContent">
         {{ page.navigation }}
       </div>
     </nav>
  </div>
  {% if page.navigation_utility %}
    {{ page.navigation_utility }}
  {% endif %}
</header>

{# Contains page title block, which shouldn't be inside sticky header #}
{# This markup is needed to theme views page title so it's consistent with node page titles. #}
  <div class="header-region container-fluid">
    <div id="block-msca-theme-page-title">
      <h1>{{ 'Facility Search'|t }}</h1>
      <div class="title-underline container">
        <div class="title-line col-5"></div><div class="title-icon facilities col-2"></div><div class="title-line col-5"></div>
      </div>
    </div>
    {% if page.header %}
      {{ page.header }}
    {% endif %}
  </div>

