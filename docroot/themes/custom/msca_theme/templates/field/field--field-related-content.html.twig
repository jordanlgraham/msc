{#
/**
 * @file
 * Theme override to display related content fields on several node types.
 *
 */
#}

{% if label_hidden %}
  {% if multiple %}
    <div class="row row-eq-height">
      {% for item in items %}
        <div class="col-lg-4 col-md-12 col-sm-12">{{ item.content }}</div>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <div{{ attributes }}>{{ item.content }}</div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes }}>
    <div{{ title_attributes }}>{{ label }}</div>
    {% if multiple %}
      <div>
    {% endif %}
    {% for item in items %}
      <div{{ item.attributes }}>{{ item.content }}</div>
    {% endfor %}
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}
