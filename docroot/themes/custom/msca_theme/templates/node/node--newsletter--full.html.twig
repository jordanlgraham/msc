{#
/**
 * @file
 * Theme override to display a Newsletter node Full display.
 *
 */
#}
<article{{ attributes.addClass('newsletter-full') }} name="emailcampaign" title="emailcampaign">
  <!--header-start -->
  <header class="row newsletter-header" style="background-color: #dce8ed; padding-top: 30px; padding-bottom: 30px;">
    <div class="container">
      <div class="row">
        <div class="col-md-8" style="text-align: left;">
          <h2 style="font-size: 54px; color: #005A84; text-transform: initial; font-weight: normal">{{ 'E-News Update'|t }}</h2>
          <h3 style="color: #005A84; text-transform: initial; font-weight: normal; font-size:30px">{{ 'Your Link to Long Term Care News in Massachusetts'|t }}</h3>
          {% if content.field_newsletter_date|render %}
            <p style="color: #005A84; font-weight: bold">{{ content.field_newsletter_date[0]['#markup'] }}</p>
          {% endif %}
        </div>
        <div class="col-md-4" style="text-align: left;">
          <img src="/themes/msca_theme/images/MassSeniorAssociation-logo.png" style="margin-top: 40px;" />
        </div>
      </div>
    </div>
  </header>
  <!--header-end -->
  <div class="row">
    <div class="container">
      <div class="row" style="margin-left: 0; margin-right: 0;">
        <!--main-section-start -->
        <section class="col-md-8">
          <!--featured-article-start -->
          {% if content.field_featured_article|render %}
            <section class="feature-article-section">
              <div class="featured-article" style="font-size: 16px; background-color: #fff; color: #005A84; font-weight: normal">
                {{ content.field_featured_article }}
              </div>
            </section>
          {% endif %}
          <!--featured-article-end -->
          <div class="clearfix"></div>
          <!--articles-start -->
          {% if content.field_newsletter_section|render %}
            <div class="latest-articles">
              {{ content.field_newsletter_section }}
            </div>
          {% endif %}
          <!--articles-end -->

        </section>
        <!--main-section-end -->

        <!--right-sidebar-start -->
        <aside class="col-md-4 newsletter">
          <div class="sidebar-block" style="margin-bottom: 0; margin-top: 0; border-top: none; background-color: #F5F5F5; padding-top: 70px;">

            <!--tocstart -->
            <h2 style="font-size: 22px; color: #2378cb; text-align: left; padding-left: 0;">{{ 'In This Issue'|t }}</h2>
            <ul class="list-unstyled issue-toc">
              {% for item in node.field_featured_article %}
                <li><a href="#{{ item.entity.id }}">{{ item.entity.label }}</a></li>
              {% endfor %}
              {% for item in node.field_newsletter_section %}
                {% for article in item.entity.fields.field_featured_articles %}
                  <li><a href="#{{ article.entity.id }}">{{ article.entity.label }}</a></li>
                {% endfor %}
              {% endfor %}
            </ul>
            <!--tocend -->

          </div>
          <!--custom-top ad space-start -->
          {% if content.field_sponsor|render %}
            <div class="sidebar-block" style="margin-bottom: 0;margin-top: 0;border-top: none;background-color: #005A84;color: #fff;border: none;">
              <h2 style="font-size: 22px; color: #fff; text-transform: initial; text-align: left; padding: 0; font-weight: bold; margin-top: 18px;">{{ 'This Week\'s E-News Update is Sponsored By'|t }}</h2>
              {{ content.field_sponsor }}
            </div>
          {% endif %}
          <!--custom-top ad space-end -->

        </aside>
        <!--right-sidebar-end -->
      </div>
    </div>
  </div>
  <div class="row" style="background-color: #2278CB; color: #fff;">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <!--custom-calendar-start -->
          {% if content.field_calendar|render %}
            <div class="calendar">
              <a name="calendar"></a>
              <h2 style="background-color: #2278CB; color: #fff;"><img src="/themes/msca_theme/images/calendar.png" style="margin-right: 10px" />{{ 'Events Calendar'|t }}</h2>
              {{ content.field_calendar }}
            </div>
          {% endif %}
          <!--custom-calendar-end -->
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 style="margin-top: 42px; margin-bottom: 40px; font-weight: 600; color: #005A84;">{{ 'Quick Links'|t }}</h2>
          <table width="100%" style="margin-bottom: 57px;">
            <tr>
              <td width="50%" style="border-top: none"><img src="/themes/msca_theme/images/quicklinks-newspaper.png" /><a href="{{ path('view.all_content.enews_updates') }}" style="margin-left: 25px; font-weight: normal; color: #005A84 !important;">{{ 'See Previous Issues'|t }}</a></td>
              <td style="border-top: none"><img src="/themes/msca_theme/images/quicklinks-user.png" /><a href="{{ path('view.preferred_vendors.page_1') }}" style="margin-left: 25px; font-weight: normal; color: #005A84 !important;">{{ 'Find a Preferred Vendor'|t }}</a></td>
            </tr>
            <tr>
              <td style="border-top: none"><img src="/themes/msca_theme/images/quicklinks-phone.png" /><a href="mailto:gabrahams@massseniorcare.org" target="_blank" style="margin-left: 25px; font-weight: normal; color: #005A84 !important;">{{ 'Contact Us'|t }}</a></td>
              {# todo: replace with ink for constant contact #}
              <td style="border-top: none"><img src="/themes/msca_theme/images/quicklinks-cog.png" /><a href="http://www.magnetmail.net/actions/subscription_manage.cfm?user_id=MA_ExCare" target="_blank" style="margin-left: 25px; font-weight: normal; color: #005A84 !important;">{{ 'Manage Your Subscription'|t }}</a></td>
            </tr>
            <tr>
              <td style="border-top: none"><img src="/themes/msca_theme/images/quicklinks-doctor.png" /><a href="{{ path('view.job_search.job_search') }}" style="margin-left: 25px; font-weight: normal; color: #005A84 !important;">{{ 'Careers'|t }}</a></td>
              <td style="border-top: none"><img src="/themes/msca_theme/images/quicklinks-star.png" /><a href="#" style="margin-left: 25px; font-weight: normal; color: #005A84 !important;">{{ 'Advocacy center'|t }}</a></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row" style="background-color: #005A84; padding-top: 36px; padding-bottom: 27px;">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <p style="color: #fff;">{{ 'The Massachusetts Senior Care Association represents a diverse set of organizations that deliver a broad spectrum of services to meet the needs of older adults and people with disabilities.'|t }}</p>
        </div>
        <div class="col-md-4">
          <img src="/themes/msca_theme/images/newsletter-facebook.png" />
          <img src="/themes/msca_theme/images/newsletter-twitter.png" style="margin-left: 20px;" />
          <img src="/themes/msca_theme/images/newsletter-logo-footer.png" style="margin-left: 33px;" />
        </div>
      </div>
    </div>
  </div>

</article>

