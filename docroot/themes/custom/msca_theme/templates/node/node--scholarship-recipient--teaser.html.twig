{#
/**
 * @file
 * Theme override to display a Scholarship Recipient node teaser display.
 *
 */
#}
<article{{ attributes }}>

    {{ title_prefix }}
    {% if not page %}
      {{ label }}
    {% endif %}
    {{ title_suffix }}

    {% if display_submitted %}
        <footer>
            {{ author_picture }}
            <div{{ author_attributes }}>
                {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
                {{ metadata }}
            </div>
        </footer>
    {% endif %}

    <div{{ content_attributes }}>
        {{ content }}
    </div>

</article>
